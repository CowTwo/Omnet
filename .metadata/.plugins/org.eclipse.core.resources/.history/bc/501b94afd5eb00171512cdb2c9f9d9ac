
#include <omnetpp.h>

using namespace omnetpp;
using namespace omnetpp2;

#define BUFLEN 1024

void simegPrint(const char *fmt, ...)
{
    char* staticbuf=(char*)malloc(BUFLEN) ;

    va_list va;

    va_start (va, fmt) ;

    vsnprintf(staticbuf, BUFLEN, fmt, va) ;
    staticbuf[BUFLEN-1] = '\0' ;

    va_end (va) ;

    EV << staticbuf;

    free(staticbuf) ;
}

